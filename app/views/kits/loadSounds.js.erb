indexForPadUpdate = 1



console.log("A J A X")

document.getElementById("addToCartButton").dataset.kitId = <%=@kit_id%>
document.getElementById("addToCartButton").dataset.pic = "<%=url_for(@cover_art)%>"

for(let i=1; i<17; i++) {
    soundsObj[`pad${i}`] = 0
    document.getElementsByClassName("padText")[i-1].innerText = ""
}

<% @sounds.each do |sound| %>
    soundsObj[`pad${indexForPadUpdate}`] = "<%=url_for(sound.soundfile)%>"
    document.getElementsByClassName("padText")[(indexForPadUpdate-1)].innerText = `<%=sound.soundfile.filename%>.split[0]`
    indexForPadUpdate++


<%end %>